<% include ../partials/header %>
<div class="container">
  <header class="page-header">
    <h1 id="inlineHeader">Add New Destination</h1>
    <p id="inlineHeader">
      Search map for a destination
    </p>
  </header>
</div>



<div class="container">
  <div class="col-md-7">
      <div class="thumbnail">
        <div id="map"></div>
      </div>
      <a href="/user/<%=user._id%>">Go Back</a>
    </div>
    <div class="container">
      <div class="col-md-5">
        <div class="row">
            <h1 style="text-align: center">Add New Destination </h1>
                <form action="/<%= user._id %>/new/destinations" method="POST">
                  <h4>Location Name</h4>
                  <div class="form-group">
                    <label for="exampleInputEmail1">Destination Title </label>
                    <input class="form-control" name="description[name]" placeholder="Code from search result here"></input>
                  </div>

                  <div class="form-group">
                    <label for="exampleInputFile">Upload Files </label><p style='display:inline; font-size:10px; margin-left:5px; '>(optional)</p>
                    <input type="file" id="exampleInputFile" name="description[file]">
                    <p class="help-block">images, videos, etc </p>
                  </div>
                  <div class="form-group">
                    <label for="exampleInputEmail1">Description </label><p style='display:inline; font-size:10px; margin-left:5px;'>(optional)</p>
                    <textarea class="form-control" rows="3" name="description[text]" placeholder="Write about your trip..."></textarea>
                  </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block">Submit!</button>
                    </div>
                </form>
                <a href="/<%= user._id %>">Go Back</a>
        </div>
      </div>


  </div>
    </div>
    <input id="autocompleteSearch" class="form-control" type="text" name="name" placeholder="Search">'
